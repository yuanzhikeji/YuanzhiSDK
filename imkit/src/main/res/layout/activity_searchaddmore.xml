<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="@dimen/dp_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:layout_toStartOf="@+id/cancel"
            android:padding="5dp"
            android:focusable="true"
            android:lines="1"
            android:focusableInTouchMode="true"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/dp_5"
            android:background="@drawable/search_bg_img"
            android:hint="@string/conversation_search_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:padding="@dimen/dp_5"
            android:textColor="@color/color_2da0f0"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_new_contacts_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:drawablePadding="@dimen/dp_10"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableStart="@drawable/icon_contact_fill_blue"
        android:drawableEnd="@drawable/arrow_right"
        android:textColor="@color/color_333333"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/text_new_contacts_phone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>