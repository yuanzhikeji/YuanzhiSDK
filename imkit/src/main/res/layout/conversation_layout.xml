<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/conversation_title"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="48dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:text="@string/tab_conversation_tab_text"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/add_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/icon_add_convers"/>
    </RelativeLayout>
    
    <LinearLayout
        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/sp_10"
            android:layout_marginBottom="@dimen/sp_10"
            android:textSize="@dimen/sp_14"
            android:padding="5dp"
            android:focusable="false"
            android:lines="1"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/dp_5"
            android:background="@drawable/search_bg_img"
            android:hint="@string/conversation_search_hf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.hlife.qcloud.tim.uikit.component.NoticeLayout
        android:id="@+id/chat_group_apply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <com.hlife.qcloud.tim.uikit.modules.conversation.ConversationListLayout
        android:id="@+id/conversation_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
