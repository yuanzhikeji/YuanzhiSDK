<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_2c2c2c"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hlife.liteav.trtcvideocall.ui.videolayout.TRTCVideoLayoutManager
        android:id="@+id/trtc_layout_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shade_sponsor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorShade" />
    <RelativeLayout
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_sponsor_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/default_head"/>
        <TextView
            android:id="@+id/tv_sponsor_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:layout_toStartOf="@+id/img_sponsor_avatar"
            tools:text="@string/app_name" />
        <TextView
            android:id="@+id/tv_sponsor_video_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toStartOf="@+id/img_sponsor_avatar"
            android:layout_below="@id/tv_sponsor_user_name"
            android:text="@string/text_video_tag_show"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_14"
            android:alpha="0.4"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_mute"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/bottom"
                app:layout_constraintEnd_toStartOf="@+id/ll_hangup"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_mute"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/bg_mute_mic" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mute_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/text_mute_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_handsfree"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/bottom"
                app:layout_constraintEnd_toStartOf="@+id/ll_dialing"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ll_hangup">
                <ImageView
                    android:id="@+id/img_handsfree"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/bg_handsfree" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/change_camera"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:text="@string/text_handsfree_1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_video"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/bottom"
                app:layout_constraintEnd_toStartOf="@+id/ll_hangup"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_video"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/bg_mute_video" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/video_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/text_video_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_hangup"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_hangup"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_hangup" />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/text_size_middle"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    tools:text="00:01" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_dialing"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_dialing"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_dialing" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>